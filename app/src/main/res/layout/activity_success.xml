<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Success"
    android:layout_margin="20dp"
    android:gravity="center">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Redirecting to home in"
           android:fontFamily="@font/poppinsbold"
           android:textSize="15sp"
           android:textColor="@color/darkgray"
           android:layout_marginRight="5dp"/>
       <TextView
           android:id="@+id/TVsuccessctr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="4"
           android:fontFamily="@font/poppinsbold"
           android:textSize="15sp"
           android:textColor="@color/darkgray"/>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please wait for the timer or click the back to home button."
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/darkgray"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:background="@drawable/cornerradius"
        android:elevation="5dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/verified"
            android:layout_marginBottom="20dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Success!"
            android:fontFamily="@font/poppinsbold"
            android:textSize="30sp"
            android:textColor="@color/darkgray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment successfully done."
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            android:textColor="@color/textDescColor"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total amount"
            android:fontFamily="@font/poppinsbold"
            android:textSize="15sp"
            android:textColor="@color/textDescColor" />
        <TextView
            android:id="@+id/TVsuccesstotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P120"
            android:fontFamily="@font/poppinsbold"
            android:textSize="25sp"
            android:textColor="@color/darkgray"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/textDescColor"/>

            <TextView
                android:id="@+id/TVpaymentmethod"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Credit"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLpaidcash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cash Recieved"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/textDescColor"/>

            <TextView
                android:id="@+id/TVpaymentcash"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="P200"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLcreditname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Credit Name"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/textDescColor"/>

            <TextView
                android:id="@+id/TVcreditname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Miguel"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLpaidchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Change"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/textDescColor"/>

            <TextView
                android:id="@+id/TVpaymentchange"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="P200"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLcredittotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:visibility="visible">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="New Total Credit"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/textDescColor"/>

            <TextView
                android:id="@+id/TVcredittotal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="P200"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Payment Time"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/textDescColor"/>

            <TextView
                android:id="@+id/TVpaymenttime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="25, Feb 2024,4:00PM"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:textAlignment="textEnd"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/BTNbacktohome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsbold"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"/>

</LinearLayout>